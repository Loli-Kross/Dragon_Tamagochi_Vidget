<Window x:Class="Dragon_Tamagochi_Vidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dragon_Tamagochi_Vidget"
        mc:Ignorable="d"
        Title="MainWindow" WindowStyle="None" 
        AllowsTransparency="True" WindowState="Maximized" 
        Topmost="True" ShowInTaskbar="False">

    <Window.Background>
        <ImageBrush />
    </Window.Background>
    <Grid>
        <Image Name="img" Source="C:/Users/79010/source/repos/Dragon_Tamagochi_Vidget/Dragon_Tamagochi_Vidget/res/Dragon.png"
               HorizontalAlignment="Center" VerticalAlignment="Top"
                Width="2" Height="3" Stretch="Uniform"/>
        <TextBlock x:Name="View" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                   Width="200" Height="320">
            <TextBlock.Background>
                <VisualBrush Visual="{Binding ElementName=img}" />
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</Window>

